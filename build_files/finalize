#!/usr/bin/bash

set -eoux pipefail

dnf5 clean all
rm -rf /tmp/* || true
find /var/* -maxdepth 0 -type d \! -name cache -exec rm -fr {} \;
find /var/cache/* -maxdepth 0 -type d \! -name libdnf5 \! -name rpm-ostree -exec rm -fr {} \;
mkdir -p /var/tmp
chmod -R 1777 /var/tmp

## Remove Documentation folder to save space, except for mangohud
find /usr/share/doc -mindepth 1 -maxdepth 1 ! -name mangohud -exec rm -rf {} +

ostree container commit
