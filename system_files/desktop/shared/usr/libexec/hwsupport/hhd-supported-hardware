#!/usr/bin/bash
# Returns true for hardware that is supported by HHD
VEN_ID="$(cat /sys/devices/virtual/dmi/id/sys_vendor)"
if [[ ":ONE-NETBOOK:GPD:AYANEO:AOKZOE:TECTOY:" =~ ":$VEN_ID:" ]]; then
	exit 0
fi

SYS_ID="$(/usr/libexec/hwsupport/sysid)"
if [[ ":ROG Ally RC71L:ROG Ally X RC72LA:83E1:83L3:83N6:83Q2:83Q3:AOKZOE A1 AR07:AOKZOE A1 Pro:Win600:Loki Max:Zeenix Pro:Loki Zero:Loki MiniPro:V3:ONE XPLAYER:ROG Flow Z13 GZ302EA:ZOTAC GAMING ZONE:Claw A1M:Claw 7 AI+ A2VM:Claw 8 AI+ A2VM:" =~ ":$SYS_ID:" ]]; then
	exit 0
fi

BOARD_NAME="$(cat /sys/devices/virtual/dmi/id/board_name)"
if [[ ":MS-1T8K:MS-1T42:MS-1T52:" =~ ":$BOARD_NAME:" ]]; then
	exit 0
fi

exit 1
