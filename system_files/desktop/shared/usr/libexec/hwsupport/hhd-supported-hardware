#!/usr/bin/bash
# Returns true for hardware that is supported by HHD
VEN_ID="$(cat /sys/devices/virtual/dmi/id/sys_vendor)"
if [[ ":ONE-NETBOOK:GPD:AYANEO:" =~ ":$VEN_ID:" ]]; then
	exit 0
fi

SYS_ID="$(/usr/libexec/hwsupport/sysid)"
if [[ ":ROG Ally RC71L:ROG Ally X RC72LA:83E1:83L3:83N6:83Q2:83Q3:AOKZOE A1 AR07:AOKZOE A1 Pro:Win600:Loki Max:Loki Zero:Loki MiniPro:V3:ONE XPLAYER:" =~ ":$SYS_ID:" ]]; then
	exit 0
fi

exit 1
